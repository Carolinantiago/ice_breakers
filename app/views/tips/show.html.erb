<div class="page-header">
  <h1><%= @tip.tip_description %></a><br> <small>Submitted by <%= @tip.user.email %></small></h1>
</div>


<% if @tip.user == current_user %>
  <div class="btn-group">
    <%= link_to 'Edit', edit_tip_path(@tip), class: "btn btn-default" %>
    <%= link_to 'Destroy', @tip, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>
<% end %>

